@model movie_seat_booking.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}


<!-- Register Section -->

<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Register Here</h2>
@*         <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
 *@    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-5">

                <div class="info-wrap">
                    <div class="login-img">
                        
                        <img src="~/logo/regilogo.JPG" class="img-fluid">
                    </div>

                </div>
            </div>
            <br/>
            <br/>
            <br/>
            <div class="col-lg-7">
                <br />
                <br />
                <br />
                <form asp-action="Register" method="post" data-aos="fade-up" data-aos-delay="200">
                  <div class="row gy-4">
                        <div class="row">
                            <div class="col-6">
                                <label asp-for="FullName" class="control-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="col-6">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" type="number" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            
                        </div>
                       

                        <div class="row">
                            <div class="col-4">
                                <label asp-for="Age" class="control-label"></label>
                                <input asp-for="Age" type="number" class="form-control" />
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>

                            <div class="col-4">
                                <label asp-for="Sex" class="control-label"></label>
                                <select asp-for="Sex" class="form-control">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Sex" class="text-danger"></span>
                            </div>

                            <div class="col-4">
                                <label for="Role">Role</label>
                                <select class="form-control" id="Role" name="Role">
                                    @foreach (var role in Model.Roles)
                                    {
                                        <option value="@role">@role</option>
                                    }
                                </select>
                            </div>
                        </div>


                        <div class="row">

                            <div class="col-6">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-6">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                        </div>
                     
                        
                        <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>

                        </div>

                        </div>
                      
                        
                        <div class="col-md-12">
                                <p>Already have an account? <a href="@Url.Action("Login", "Account")">Login here</a></p>
                        </div>
                    </div>
                </form>
            </div><!-- End Contact Form -->

        </div>

    </div>

</section><!-- /Contact Section -->


