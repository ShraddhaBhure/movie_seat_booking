@model Booking

<h2>Booking Confirmation</h2>

<p>Booking ID: @Model.BookingId</p>
<p>Customer Name: @Model.CustomerName</p>
<p>Movie: @Model.Movie.Title</p>
<p>Booking Time: @Model.BookingTime.ToString("dd-MM-yyyy hh:mm:ss tt")</p>
<p>Total Price: @Model.BookedPrice.ToString("C")</p> <!-- Show total price here -->

<h3>Booked Seats</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Row</th>
            <th>Column</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seat in Model.BookedSeats)
        {
            <tr>
                <td>@seat.RowName</td>
                <td>@seat.ColumnName</td>
                <td>@seat.RowGroup.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

