@model Movie
@{
    var averageRating = ViewBag.AverageRating as decimal?;
}

<h2>@Model.Title</h2>

<p><strong>Average Rating:</strong></p>
<div class="star-rating">
    @for (int i = 1; i <= 5; i++)
    {
        <i class="fa @(averageRating >= i ? "fa-star" : "fa-star-o")" aria-hidden="true"></i>
    }
</div>

<p><strong>Showtime:</strong> @Model.ShowTime.ToString("MMMM dd, yyyy h:mm tt")</p>
<p><strong>Price:</strong> @Model.Price.ToString("C")</p>
