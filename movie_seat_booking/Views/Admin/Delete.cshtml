@model Movie

@{
    ViewData["Title"] = "Delete Movie";
}
<section id="starter-section" class="starter-section section">

    <div class="card">


        <div class="card-body">
<h2>Delete Movie</h2>

<div>
    <h3>Are you sure you want to delete the following movie?</h3>

    <div>
        <strong>Title:</strong> @Model.Title
    </div>
    <div>
        <strong>Genre:</strong> @Model.Genre
    </div>
    <div>
        <strong>ShowTime:</strong> @Model.ShowTime.ToString("f")
    </div>
    <div>
        <strong>Price:</strong> @Model.Price.ToString("C")
    </div>

    @if (!string.IsNullOrEmpty(Model.CoverImage))
    {
        <div>
            <h5>Cover Image:</h5>
            <img src="~/movieimages/@Model.CoverImage" width="150" />
        </div>
    }

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
        </div>
    </div>
    </section>