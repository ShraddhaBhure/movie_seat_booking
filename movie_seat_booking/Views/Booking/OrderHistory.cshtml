@model IEnumerable<Booking>

@{
    ViewData["Title"] = "Order History";
}


<!-- Starter Section Section -->
<section id="starter-section" class="starter-section section">
    <div class="card">
        <div class="card-header">
            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">

                <h3>@ViewData["Title"]</h3>

            </div><!-- End Section Title -->
        </div>
        <div class="card-body">
            <div class="container" data-aos="fade-up">

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Movie</th>
                <th>Booking Time</th>
                <th>Seats Booked</th>
                <th>Booked Price</th>
                                <th>Payment Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingId</td>
                    <td>@booking.Movie.Title</td> 
                    <td>@booking.BookingTime.ToString("g")</td>
                    <td>
                        @foreach (var seat in booking.BookedSeats)
                        {
                            <span>@seat.RowName-@seat.ColumnName</span><br />
                        }
                    </td>
                    <td>@booking.BookedPrice.ToString("C")</td>
                                    <td>@booking.PaymentStatus</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <strong>No bookings found!</strong> You have no order history.
    </div>
}




            </div>
        </div>
    </div>
</section><!-- /Starter Section Section -->
